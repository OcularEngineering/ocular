{
  "name": "@ocular/ocular",
  "version": "1.0.0",
  "description": "Ocular Core Backend",
  "packageManager": "npm@6.14.15",
  "main": "dist/ocular/src/main.js",
  "keywords": [
    "core",
    "backend"
  ],
  "author": "Louis Luxa Murerwa",
  "devDependencies": {
    "@types/ora": "^3.2.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "watch": "tsc --build --watch",
    "prepublishOnly": "cross-env NODE_ENV=production tsc --build",
    "build": "rimraf dist && tsc --build",
    "dev": "npm run build && NODE_ENV=development nodemon dist/ocular/src/main.js",
    "start": "npm run build && nodemon dist/ocular/src/main.js",
    "clean": "rimraf dist node_modules",
    "test": "jest --runInBand --bail --detectOpenHandles --forceExit",
    "typeorm": "npm run build && typeorm-ts-node-esm -d dist/ocular/src/data-source.js"
  },
  "dependencies": {
    "@azure/search-documents": "^12.0.0",
    "@ocular/types": "*",
    "@ocular/utils": "*",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.36.1",
    "cors": "^2.8.5",
    "express-session": "^1.18.0",
    "fs-exists-cached": "^1.0.0",
    "ioredis-mock": "^8.9.0",
    "morgan": "^1.10.0",
    "ora": "^3.4.0",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "typeorm": "^0.3.20"
  }
}
