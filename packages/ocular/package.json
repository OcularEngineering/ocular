{
  "name": "@ocular/ocular",
  "version": "1.0.0",
  "description": "Ocular Core Backend",
  "packageManager": "npm@6.14.15",
  "main": "dist/ocular/src/main.js",
  "keywords": [
    "core",
    "backend"
  ],
  "author": "Louis Luxa Murerwa",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/ora": "^3.2.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "watch": "tsc --build --watch",
    "prepublishOnly": "cross-env NODE_ENV=production tsc --build",
    "build": "rimraf dist && tsc --build",
    "dev": "cross-env CONFIG_FILE=core-config-dev.js NODE_ENV=development npm run start",
    "local": "cross-env CONFIG_FILE=core-config-local.js NODE_ENV=local npm run start",
    "start": "npm run build && nodemon dist/ocular/src/main.js",
    "clean": "rimraf dist node_modules",
    "test": "jest src --detectOpenHandles",
    "typeorm:dev": "npm run build && cross-env CONFIG_FILE=core-config-dev.js NODE_ENV=development  typeorm-ts-node-esm -d dist/ocular/src/data-source.js",
    "typeorm:local": "npm run build && cross-env CONFIG_FILE=core-config-local.js NODE_ENV=local typeorm-ts-node-esm -d dist/ocular/src/data-source.js"
  },
  "dependencies": {
    "@azure/search-documents": "^12.0.0",
    "@medusajs/file-local": "^1.0.3",
    "@ocular/types": "*",
    "@ocular/utils": "*",
    "@types/multer": "^1.4.11",
    "@xenova/transformers": "^2.17.1",
    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.36.1",
    "cors": "^2.8.5",
    "d3-dsv": "^2.0.0",
    "eslint-config-next": "^14.2.4",
    "express-session": "^1.18.0",
    "fast-glob": "^3.3.2",
    "fs-exists-cached": "^1.0.0",
    "ioredis": "^5.4.1",
    "ioredis-mock": "^8.9.0",
    "kafka-js": "^0.0.0",
    "kafkajs": "^2.2.4",
    "langchain": "^0.1.37",
    "mammoth": "^1.7.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "next": "^14.2.4",
    "node-schedule": "^2.1.1",
    "ocular-telemetry": "^1.0.0",
    "ora": "^3.4.0",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "path": "^0.12.7",
    "pdf-parse": "^1.1.1",
    "puppeteer": "^22.10.0",
    "rate-limiter-flexible": "^5.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "scrypt-kdf": "^2.0.1",
    "typeorm": "^0.3.20",
    "uuid": "^9.0.1"
  }
}
