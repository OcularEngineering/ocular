    "connect-redis": "^7.1.1",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.36.1",
    "express-session": "^1.18.0",
    "fs-exists-cached": "^1.0.0",
    "infisical": "^1.0.46",
    "ioredis-mock": "^8.9.0",
    "morgan": "^1.10.0",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "typeorm": "^0.3.20"
