    "typeorm": "npm run build && typeorm-ts-node-esm -d dist/ocular/src/data-source.js"
  },
  "dependencies": {
    "@azure/search-documents": "^12.0.0",
    "@ocular/types": "file:../types",
    "@ocular/utils": "file:../utils",
