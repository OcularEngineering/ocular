{
  "compilerOptions": {
     "lib": ["es2020"],
     "target": "es2020",
     "rootDir": "src",
     "outDir": "./dist",
     "esModuleInterop": true,
     "declaration": false,
     "module": "commonjs",
     "moduleResolution": "node",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
   //   "sourceMap": true,
     "noImplicitReturns": false,
     "strictNullChecks": false,
     "strictFunctionTypes": false,
     "noImplicitThis": false,
     "allowJs": true,
     "skipLibCheck": true,
     "downlevelIteration": true,
     "jsx": "react"
  },
  "include": ["src"],
  "exclude": [
     "dist",
     "src/**/__tests__",
     "src/**/__mocks__",
     "src/**/__fixtures__",
     "node_modules"
  ]
}

